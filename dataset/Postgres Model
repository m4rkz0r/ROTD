CREATE TABLE traffic_data (
    count_point_id                  INTEGER             NULL,         -- unique identifier for count points
    year                            INTEGER             NULL,         -- year of data
    region_id                       INTEGER             NULL,         -- region ID
    region_name                     VARCHAR             NULL,         -- region name
    region_ons_code                 VARCHAR             NULL,         -- region ONS code
    local_authority_id              INTEGER             NULL,         -- local authority ID
    local_authority_name            VARCHAR             NULL,         -- local authority name
    local_authority_code            VARCHAR             NULL,         -- local authority code
    road_name                       VARCHAR             NULL,         -- road name
    road_category                   VARCHAR             NULL,         -- road category (e.g., PA, MA)
    road_type                       VARCHAR             NULL,         -- road type (e.g., Major, Minor)
    start_junction_road_name        VARCHAR             NULL,         -- start junction road name
    end_junction_road_name          VARCHAR             NULL,         -- end junction road name
    easting                         INTEGER             NULL,         -- easting coordinate
    northing                        INTEGER             NULL,         -- northing coordinate
    latitude                        NUMERIC(10,8)       NULL,         -- latitude (with 8 decimal precision)
    longitude                       NUMERIC(11,8)       NULL,         -- longitude (with 8 decimal precision)
    link_length_km                  NUMERIC(5,2)        NULL,         -- link length in kilometers
    link_length_miles               NUMERIC(5,2)        NULL,         -- link length in miles
    estimation_method               VARCHAR             NULL,         -- method of estimation (e.g., Estimated, Measured)
    estimation_method_detailed      VARCHAR             NULL,         -- detailed estimation method
    direction_of_travel             VARCHAR             NULL,         -- direction of travel (e.g., N, S, E, W)
    pedal_cycles                    INTEGER             NULL,         -- count of pedal cycles
    two_wheeled_motor_vehicles      INTEGER             NULL,         -- count of two-wheeled motor vehicles
    cars_and_taxis                  INTEGER             NULL,         -- count of cars and taxis
    buses_and_coaches               INTEGER             NULL,         -- count of buses and coaches
    LGVs                            INTEGER             NULL,         -- count of Light Goods Vehicles
    HGVs_2_rigid_axle               INTEGER             NULL,         -- count of HGVs with 2 rigid axles
    HGVs_3_rigid_axle               INTEGER             NULL,         -- count of HGVs with 3 rigid axles
    HGVs_4_or_more_rigid_axle       INTEGER             NULL,         -- count of HGVs with 4 or more rigid axles
    HGVs_3_or_4_articulated_axle    INTEGER             NULL,         -- count of HGVs with 3 or 4 articulated axles
    HGVs_5_articulated_axle         INTEGER             NULL,         -- count of HGVs with 5 articulated axles
    HGVs_6_articulated_axle         INTEGER             NULL,         -- count of HGVs with 6 articulated axles
    all_HGVs                        INTEGER             NULL,         -- total count of HGVs
    all_motor_vehicles              INTEGER             NULL          -- total count of all motor vehicles
);
